<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@color/backgroundColor">

    <TextView
            android:id="@+id/detailTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textSize="@dimen/main_title_text_size"
            android:textStyle="bold"
            android:textColor="@color/backgroundColor"
            android:background="@color/mainColor"
            android:layout_alignParentStart="true"/>

    <LinearLayout
            android:id="@+id/linerlayoutone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/detailTitle">

        <ImageView
                android:id="@+id/detailImage"
                android:layout_width="110dp"
                android:layout_height="130dp"
                android:src="@drawable/board_item_basic_thumbnail"
                android:scaleType="fitXY"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="8dp">

            <TextView
                    android:id="@+id/smallTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textSize="10pt"
                    android:textColor="@color/mainColor"/>
            <TextView
                    android:id="@+id/smallHost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Host"/>
            <TextView
                    android:id="@+id/smallDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="~ 2016_12_20 (TUE)"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
            android:id="@+id/totalInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="내용"
            android:textColor="@color/backgroundColor"
            android:textStyle="bold"
            android:textSize="@dimen/main_title_text_size"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="@color/mainColor"
            android:layout_below="@+id/linerlayoutone"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/totalInformation"
            android:layout_above="@+id/linerlayouttwo">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/second_title_text_size"
                    android:text="* 제한사항 "
                    android:textStyle="bold"
                    android:textColor="@color/textTitle"/>
            <TextView
                    android:id="@+id/attendCondition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"/>

            <TextView
                    android:layout_marginTop="@dimen/component_top_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/second_title_text_size"
                    android:text="* 내용"
                    android:textColor="@color/textTitle"/>
            <TextView
                    android:id="@+id/contents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"/>

            <TextView
                    android:layout_marginTop="@dimen/component_top_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/second_title_text_size"
                    android:text="* 수상"
                    android:textColor="@color/textTitle"/>
            <TextView
                    android:id="@+id/benefits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/second_title_text_size"
                    android:text="* 제출기한"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/component_top_margin"
                    android:textColor="@color/textTitle"/>
            <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/component_top_margin"
                    android:textSize="@dimen/second_title_text_size"
                    android:text="* 접수처"
                    android:textColor="@color/textTitle"/>
            <TextView
                    android:layout_marginTop="@dimen/component_top_margin"
                    android:id="@+id/reception"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"/>

            <TextView
                    android:layout_marginTop="@dimen/component_top_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/second_title_text_size"
                    android:text="* 공지사항"
                    android:textColor="@color/textTitle"/>
            <TextView
                    android:id="@+id/notice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"/>

            <TextView
                    android:layout_marginTop="@dimen/component_top_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/second_title_text_size"
                    android:text="* 주최측"
                    android:textStyle="bold"
                    android:textColor="@color/textTitle"/>
            <TextView
                    android:id="@+id/contactInformation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nothing"
                    android:layout_marginBottom="3dp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
            android:id="@+id/linerlayouttwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="right">

        <ImageButton
                android:id="@+id/kakaoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/kabtn_small"
                android:background="@color/backgroundColor"/>

        <ImageButton
                android:id="@+id/facebookButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fbbtn_small"
                android:background="@color/backgroundColor"
                android:layout_marginLeft="4dp"/>
    </LinearLayout>
</RelativeLayout>