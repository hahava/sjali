    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name="com.sejong.hungryduck.activity.MainActivity"
                android:label="@string/app_name">

        </activity>
        <activity android:name="com.sejong.hungryduck.activity.PostingActivity"></activity>
        <activity android:name="com.sejong.hungryduck.activity.StudyGroupWritingActivity"></activity>
        <activity android:name="com.sejong.hungryduck.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>